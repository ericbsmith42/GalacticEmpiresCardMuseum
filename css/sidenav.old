@font-face {
    font-family: 'Insignia'; /*a name to be used later*/
    src: url('Insignia.otf'); /*URL to font*/
}

.spacer {
	background-image: url(../images/starfield.jpg);
	position:fixed;
	top:0px;
	left:0px;
	width:100%;
	height:20px;
	background-color: #000000;
	color:white;
	z-index:0;
}

.sidenav {
    position: fixed;
    z-index: 1;
    width: 200px;
	height: 1px;
    top: 0;
    right: 0;
	background-image: url("../images/starfield.jpg");
	background-color: Black;
    overflow-x: hidden;
	overflow: hidden;
	padding: 0px 0;
	padding-left: 20px;
	padding-right: 20px;
	transition: 0.5s;
	float:center;
	font-family: "Insignia", "Times New Roman", "Times", serif;
	color: #00FFFF;
    border-radius: 30px;
}

.navindex {
	font-size: 1.5rem;
	float:center;
	text-align: left;
    z-index: 0;
	top: 0;
	background-image: url("../images/starfield.jpg");
	background-color: Black;
	position : fixed;
	padding-top: 4px;
	padding-bottom: 4px;
	right: 20;
	width: 275;
	height: 30;
	text-align: left;
    float: right;
	clear: both;
	font-weight: bold;
	font-family: "Insignia", "Times New Roman", "Times", serif;
	color: #00FFFF;
    border-radius: 30px;
}



.clearfix {
    float: left;
	clear: both;
}
.sidenavtable {
    z-index: 1;
    overflow-x: hidden;
	overflow: hidden;
	padding: 5px 0;
	padding-left: 20px;
	padding-right: 20px;
    border-radius: 30px;
	transition: 0.5s;
	float:center;
	clear: both;
	font-weight: bold;
	font-family: "Insignia", "Times New Roman", "Times", serif;
	color: #00FFFF;
}


.whitetable {
	font-size: 1.5rem;
	font-weight: bold;
	font-family: "Insignia", "Times New Roman", "Times", serif;
	color: #white;
}
.sidenav:hover {
    width: 400px;
	height: 100vh;
    overflow-y: scroll;
	transition: 0.5s;
    border-radius: 250px;
}

.sidenav a {
    padding: 6px 8px 6px 16px;
    text-decoration: underline;
    font-size: 1.5rem;
	color: #00FFFF;
    display: block;
}

.sidenav a:hover {
    color: #FF0000;
}

@media screen and (max-width: 400px) {
	.sidenav:hover {
		width: 80vw;
	}
}
